 {{#>layout}}
<div class="page-header">
    <h1>BLOG
        <small>文章列表</small>
    </h1>
</div>
<div class="list-article">
    {{#each data.data}}
    <div class="panel panel-default">
        <div class="panel-body">
            <a href="/article/detail/{{id}}">{{title}}</a>
            <div class="pull-right text-time">{{format_time create_time}}</div>
            <div>
                <small>{{brief}}</small>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{>pagnation data path="/article/${page}"}} {{/layout}}